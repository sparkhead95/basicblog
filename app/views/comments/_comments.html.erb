<h3>Comments</h3>
<% @post.comments.each do |comment| %>
  <div class="card">
    <div class="card-header">
      <h6 class="card-subtitle mb-2 text-muted"><strong><%= comment.username %>:</strong> <%= comment.body %>
      <%= link_to '[X]', [comment.post, comment], method: :delete, data: {confirm: 'Are you sure?'} %></h6>
    </div>
  </div>
<% end %>

<hr>